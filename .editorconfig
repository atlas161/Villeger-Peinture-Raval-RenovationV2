# ═══════════════════════════════════════════════════════════════════════════════
# EditorConfig - Configuration universelle pour tous les éditeurs
# https://editorconfig.org
# ═══════════════════════════════════════════════════════════════════════════════

root = true

# ─────────────────────────────────────────────────────────────────────────────────
# Règles par défaut pour tous les fichiers
# ─────────────────────────────────────────────────────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ─────────────────────────────────────────────────────────────────────────────────
# HTML
# ─────────────────────────────────────────────────────────────────────────────────
[*.html]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────────
# CSS
# ─────────────────────────────────────────────────────────────────────────────────
[*.css]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────────
# JavaScript
# ─────────────────────────────────────────────────────────────────────────────────
[*.js]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────────
# JSON
# ─────────────────────────────────────────────────────────────────────────────────
[*.json]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────────
# Markdown
# ─────────────────────────────────────────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────────
# YAML
# ─────────────────────────────────────────────────────────────────────────────────
[*.{yml,yaml}]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────────
# Fichiers de configuration Netlify
# ─────────────────────────────────────────────────────────────────────────────────
[netlify.toml]
indent_size = 2
